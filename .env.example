# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
SERVER_PORT=3001
SERVER_HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventory_db
DB_USER=inventory_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false
DB_CONNECTION_LIMIT=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_NETWORK_ID=1337
BLOCKCHAIN_GAS_LIMIT=6000000
BLOCKCHAIN_GAS_PRICE=20000000000
PRIVATE_KEY=0xyour_private_key_here_64_characters
CONTRACT_ADDRESS_INVENTORY_MANAGER=
CONTRACT_ADDRESS_USER_REGISTRY=
CONTRACT_ADDRESS_AUDIT_LOGGER=

# JWT Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourcompany.com

# Slack Integration (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_characters
COOKIE_SECRET=your_cookie_secret_minimum_32_characters
CSRF_SECRET=your_csrf_secret_minimum_32_characters

# Encryption Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_ALGORITHM=aes-256-gcm
HASH_ALGORITHM=sha256

# Monitoring Configuration
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# AI Agents Configuration
AI_AGENTS_ENABLED=true
MONITORING_AGENT_INTERVAL=60
HEALING_AGENT_INTERVAL=30
OPTIMIZATION_AGENT_INTERVAL=300
PREDICTION_MODEL_PATH=./models
ANOMALY_DETECTION_THRESHOLD=0.8

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Development Configuration
DEBUG=false
MOCK_BLOCKCHAIN=false
SKIP_BLOCKCHAIN_VERIFICATION=false
ENABLE_SWAGGER=true

# Production Configuration
SSL_CERT_PATH=
SSL_KEY_PATH=
CLUSTER_MODE=false
CLUSTER_WORKERS=0