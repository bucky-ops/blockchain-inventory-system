{
  "name": "ai-agents",
  "version": "1.0.0",
  "description": "AI agents for blockchain inventory system monitoring and self-healing",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:monitoring\" \"npm run dev:healing\" \"npm run dev:optimization\"",
    "dev:monitoring": "nodemon src/monitoring/index.ts",
    "dev:healing": "nodemon src/healing/index.ts",
    "dev:optimization": "nodemon src/optimization/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "ethers": "^6.8.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "@tensorflow/tfjs-node": "^4.12.0",
    "ml-regression": "^6.0.1",
    "simple-statistics": "^7.8.3",
    "jsonata": "^2.0.3",
    "uuid": "^9.0.1",
    "bull": "^4.12.2",
    "ioredis": "^5.3.2",
    "prom-client": "^15.0.0",
    "nodemailer": "^6.9.7",
    "slack-web-api": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}